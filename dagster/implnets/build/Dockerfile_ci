FROM python:3.10-slim

# Read the ARG implnet to set who to build for.
# docker buildandpush pulls the repo, so we need to put the code at a different location

ARG implnet
WORKDIR ./dagster/implnets
COPY ./requirements.txt .
COPY ./configs/${implnet}/gleanerconfig.yaml gleanerconfig.yaml
RUN mkdir output
#COPY ./generatedCode/implnet-${implnet}/output output

RUN pip install -r requirements.txt && python pygen.py -cf ./gleanerconfig.yaml -od ./output  -td ./templates/v1   -d 7

# Copy source code
COPY dagster.yaml /usr/src/app/
COPY ./output /usr/src/app/

# Change working directory
WORKDIR /usr/src/app
ENV DAGSTER_HOME=/usr/src/app


CMD ["dagit", "-w", "workspace.yaml", "-h", "0.0.0.0", "-p", "3000"]
